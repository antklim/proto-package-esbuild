{
  "name": "proto-package-esbuild",
  "version": "0.1.0",
  "description": "Template repository for NPM package with esbuild",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "build": "esbuild index.ts --bundle --platform=node --outfile=dist/index.js --format=esm",
    "lint": "tsc",
    "test": "jest",
    "start": "node dist/index.js",
    "dev:tsc": "tsc --watch --preserveWatchOutput",
    "dev:build": "npm run build --watch",
    "dev:run": "node --watch dist/index.js",
    "dev": "run-p dev:*"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^22.15.30",
    "esbuild": "^0.25.5",
    "esbuild-jest": "^0.5.0",
    "jest": "^30.0.3",
    "npm-run-all": "^4.1.5",
    "ts-jest": "^29.4.0",
    "typescript": "^5.8.3"
  }
}
